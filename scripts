CREATE DATABASE quantity;

USE QUANTITY;
CREATE TABLE PMS_ALBUM (
  ID	BIGINT,
  NAME  VARCHAR(64) COMMENT 'Album Name',
  COVER_PIC VARCHAR(1000),
  SORT INT,
  DESCRIPTION VARCHAR(1000)
);
ALTER TABLE PMS_ALBUM ADD CONSTRAINT PK_ALBUM PRIMARY KEY (ID);

CREATE TABLE PMS_ALBUM_PIC(
	ID BIGINT,
	ALBUM_ID BIGINT,
    PIC VARCHAR(1000)
);
ALTER TABLE PMS_ALBUM_PIC ADD CONSTRAINT PK_PMS_ALBUM_PIC PRIMARY KEY (ID);

CREATE TABLE PMS_COMMENT_REPLAY (
  ID BIGINT,
  COMMENT_ID BIGINT,
  MEMBER_NICK_NAME VARCHAR(255),
  MEMBER_ICON VARCHAR(255),
  CONTENT VARCHAR(1000),
  CREATE_TIME DATETIME,
  TYPE INT(1)
);

CREATE TABLE PMS_COMMENT (
  ID BIGINT,
  COMMENT_ID BIGINT,
  MEMBER_NICK_NAME VARCHAR(255),
  PRODUCT_NAME  VARCHAR(255),
  STAR  INT(3),
  MEMBER_IP VARCHAR(64),
  CREATE_TIME DATETIME,
  SHOW_STATUS INT(1),
  PRODUCT_ATTRIBUTE VARCHAR(255),
  COLLECT_COUONT INT,
  READ_COUNT INT,
  CONTENT TEXT,
  PIC VARCHAR(1000),
  MEMBER_ICON VARCHAR(255),
  REPLAY_COUNT INT
);

CREATE TABLE PMS_SKU_STOCK (
  ID BIGINT,
  PRODUCT_ID BIGINT,
  SKU_CODE VARCHAR(64),
  PRICE DECIMAL(10, 2),
  STOCK INT,
  LOW_STOCK INT,
  SP1 VARCHAR(64),
  SP2 VARCHAR(64),
  SP3 VARCHAR(64),
  PIC VARCHAR(255),
  SALE INT,
  PROMOTION_PRICE DECIMAL(10, 2),
  LOCK_STOCK INT
);

CREATE TABLE PMS_PRODUCT_CATEGORY (
  ID BIGINT,
  PARENT_ID BIGINT,
  NAME VARCHAR(64),
  LEVEL INT(1),
  PRODUCT_COUNT INT,
  PRODUCT_UNIT VARCHAR(64),
  NAV_STATUS INT(1),
  SHOW_STATUS INT(1),
  SORT INT,
  ICON VARCHAR(255),
  KEYWORDS VARCHAR(255),
  DESCRIPTION TEXT
);
ALTER TABLE PMS_PRODUCT_CATEGORY ADD CONSTRAINT PK_PMS_PRODUCT_CATEGORY PRIMARY KEY (ID);

CREATE TABLE PMS_BRAND (
  ID BIGINT,
  NAME VARCHAR(64),
  FIRST_LETTER VARCHAR(8),
  FACTORY_STATUS INT(1),
  SHOW_STATUS INT(1),
  PRODUCT_COUNT INT,
  PRODUCT_COMMENT_COUNT INT,
  LOGO VARCHAR(255),
  BIG_PIC VARCHAR(255),
  BRAND_STORY TEXT
);
ALTER TABLE PMS_BRAND ADD CONSTRAINT PK_PMS_BRAND PRIMARY KEY (ID);

CREATE TABLE PMS_PRODUCT_ATTRIBUTE (
  ID BIGINT,
  PRODUCT_ATTRIBUTE_CATEGORY_ID BIGINT,
  NAME VARCHAR(64),
  SELECT_TYPE INT(1),
  INPUT_TYPE INT(1),
  INPUT_LIST VARCHAR(255),
  SORT INT,
  FILTER_TYPE INT(1),
  SEARCH_TYPE INT(1),
  RELATED_STATUS INT(1),
  HAND_ADD_STATUS INT(1),
  TYPE INT(1)
);
ALTER TABLE PMS_PRODUCT_ATTRIBUTE ADD CONSTRAINT PK_PMS_PRODUCT_ATTRIBUTE PRIMARY KEY (ID);

CREATE TABLE PMS_PRODUCT (
  ID BIGINT,
  BRAND_ID BIGINT,
  PRODUCT_CATEGORY_ID BIGINT,
  FEIGHT_TEMPLATE_ID BIGINT,
  PRODUCT_ATTRIBUTE_CATEGORY_ID BIGINT,
  NAME VARCHAR(64),
  PIC  VARCHAR(255),
  PRODUCCT_SN VARCHAR(64),
  DELETE_STATUS INT(1),
  PUBLISH_STATUS INT(1),
  NEW_STATUS INT(1),
  RECOMMEND_STATUS INT(1),
  VERIFY_STATUS INT(1),
  SORT INT,
  SALE INT,
  PRICE DECIMAL(10,2),
  PROMOTION_PRICE DECIMAL(10,2),
  GIFT_GROWTH INT,
  GIFT_POINT INT,
  USE_POINT_LIMIT INT,
  SUB_TITLE VARCHAR(255),
  DESCRIPTION TEXT,
  ORIGINAL_PRICE DECIMAL(10, 2),
  STOCK INT,
  LOW_STOCK INT,
  UNIT VARCHAR(16),
  WEIGHT DECIMAL(10,2),
  PREVIEW_STATUS INT(1),
  SERVICE_IDS VARCHAR(64),
  KEYWORDS VARCHAR(255),
  NOTE VARCHAR(255),
  ALBUM_PICS VARCHAR(255),
  DETAIL_TITLE VARCHAR(255),
  DETAIL_DESC TEXT,
  DETAIL_HTML TEXT,
  DETAIL_MOBILE_HTML TEXT,
  PROMOTION_START_TIME DATETIME,
  PROMOTION_END_TIME DATETIME,
  PROMOTION_PER_LIMIT INT,
  PROMOTION_TYPE INT(1),
  PRODUCTION_CATEGORY_NAME VARCHAR(255),
  BRAND_NAME VARCHAR(255)
);
ALTER TABLE PMS_PRODUCT ADD CONSTRAINT PK_PMS_PRODUCT PRIMARY KEY (ID);
